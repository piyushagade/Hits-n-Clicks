<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aaaaaa"
                android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_stats"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:padding="10sp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:id="@+id/rl_notif">


                <TextView
                    android:layout_width="wrap_content"
                    android:text=">> "
                    android:textSize="16sp"
                    android:textColor="#AAFFFFFF"
                    android:id="@+id/pointer2"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"/>

               <com.jp.cowsnbulls.Typewriter
                   android:layout_width="wrap_content"
                   android:layout_height="44dp"
                   android:id="@+id/tw_stats"
                   android:gravity="top"
                   android:textSize="16sp"
                   android:typeface="monospace"
                   android:layout_toRightOf="@+id/pointer2"
                   android:textColor="#AAFFFFFF">

               </com.jp.cowsnbulls.Typewriter>

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/cv_stats"
            android:paddingLeft="26dp"
            android:paddingTop="26dp"
            android:id="@+id/upper_menu">




            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_sv"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hits 'n Clicks"
                android:id="@+id/title"
                android:textIsSelectable="false"
                android:textSize="36sp"
                android:typeface="monospace"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"/>
            </HorizontalScrollView>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_sv"
                android:layout_alignLeft="@+id/title_sv"
                android:layout_alignStart="@+id/title_sv">
            </ScrollView>

            <com.jp.cowsnbulls.Typewriter
                android:layout_width="match_parent"
                android:layout_below="@id/title_sv"
                android:layout_height="match_parent"
                android:id="@+id/tw_bg"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/title_sv"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Begin Mission"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/new_game"
                    android:typeface="monospace"
                    android:textSize="26sp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Mission Briefing"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="15dp"
                    android:id="@+id/objective"
                    android:layout_below="@+id/new_game"
                    android:typeface="monospace"
                    android:textSize="24sp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="My Report"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="15dp"
                    android:id="@+id/report"
                    android:layout_below="@+id/multiplayer_game"
                    android:typeface="monospace"
                    android:textSize="24sp"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Multiplayer"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/multiplayer_game"
                    android:layout_below="@+id/objective"
                    android:typeface="monospace"
                    android:textSize="26sp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Training"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="15dp"
                    android:id="@+id/training"
                    android:layout_below="@+id/report"
                    android:typeface="monospace"
                    android:textSize="24sp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Settings"
                    android:id="@+id/settings"
                    android:layout_marginLeft="10dp"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="20sp"
                    android:textSize="22sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/training"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="About"
                    android:id="@+id/about"
                    android:layout_marginLeft="10dp"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="20sp"
                    android:textSize="22sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/settings"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Quit"
                    android:id="@+id/quit"
                    android:layout_marginLeft="10dp"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="20sp"
                    android:textSize="22sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/about"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        android:id="@+id/rl_splash"
        android:visibility="invisible">

        <ImageView
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:id="@+id/splash_logo"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <com.jp.cowsnbulls.Typewriter
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/load_progress"
            android:layout_marginTop="70dp"
            android:textColor="#fabc3d"
            android:textSize="120dp"
            android:layout_alignTop="@+id/splash_logo"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>