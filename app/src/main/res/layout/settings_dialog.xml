<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_root"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blank"
        android:layout_margin="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout3">



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settings_title"
            android:textSize="30dp"
            android:typeface="monospace"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/settings_sv"
            android:fillViewport="false"
            android:layout_marginTop="6dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/settings_title">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Switch Console View"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/layout"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="25sp"
                    android:textSize="20sp"
                    android:typeface="monospace"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/layout_selected"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="2sp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/layout"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Switch Input Method"
                    android:id="@+id/input"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20sp"
                    android:textSize="20sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/layout_selected"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/input_selected"
                    android:layout_marginLeft="10dp"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="2sp"
                    android:textSize="12sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/input"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Switch Theme"
                    android:id="@+id/theme"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20sp"
                    android:textSize="20sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/input_selected"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="----"
                    android:id="@+id/theme_selected"
                    android:layout_marginLeft="10dp"
                    android:textColor="#AAFFFFFF"
                    android:layout_marginTop="2sp"
                    android:textSize="12sp"
                    android:typeface="monospace"
                    android:layout_below="@+id/theme"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </ScrollView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back To Menu"
            android:id="@+id/settings_back"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#AAFFFFFF"
            android:typeface="monospace"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</RelativeLayout>